<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
	<ui:style>
		.welcomeHeader {
			font-size: 2em;
			color: #1144ff;
			margin-left: 50px;
		}
		.subHeader { 
			font-size: 1.5em;
			color: #222277;
			margin-left: 100px;
		}
		.subHeaderText { 
			color: #998866;
			margin-left: 150px;
		}
		.text { 
			color: #998866;
			margin-left: 100px;
		}
	</ui:style>
	
	<g:HTMLPanel>
	<div class='{style.welcomeHeader}'>Friends Photo Viewer</div>
		<div class='{style.text}'>View photos of all your friends in one convenient place.</div>
	<div class='{style.welcomeHeader}'>Friend List</div>
		<div class='{style.text}'>A list of all your friends will be shown here allowing you to view photos of each friend in a new tab.</div>
	</g:HTMLPanel>

</ui:UiBinder>
	